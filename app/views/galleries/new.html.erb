<%= form_for [@artist, @artist.galleries.build] do |f| %>
  <p>
  <%= f.label :gallery_name %>
  <%= f.text_field :gallery_name  %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>

  <%= f.hidden_field :artist_id, :value => @artist.id %>

  <p>
  <%= f.submit %>
  </p>

<%end%>
